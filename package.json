    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "libpg-query": "^16.3.0",
    "tailwindcss": "^4.0.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.1.0",
    "wrangler": "^3.107.3"
