    "uuidv7": "^1.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cloudflare/workers-types": "^4.20250224.0",
    "@hono/node-server": "^1.13.8",
    "@hono/vite-build": "^1.3.0",
    "@hono/vite-dev-server": "^0.18.1",
    "@tailwindcss/vite": "^4.0.5",
    "@ts-safeql/eslint-plugin": "^3.6.6",
